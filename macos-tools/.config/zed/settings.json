{
  "base_keymap": "JetBrains",
  "agent": {
    "always_allow_tool_actions": true,
    "model_parameters": [],
    "default_model": {
      "provider": "openai",
      "model": "anthropic/claude-3.7-sonnet"
    }
  },
  "icon_theme": "Catppuccin Mocha",
  "vim_mode": false,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Catppuccin Mocha"
  },
  "dap": {
    "netcoredbg": {
      "binary": "/Users/penkin/sandbox/netcoredbg/netcoredbg",
      "args": ["--interpreter=vscode"]
    }
  },
  "terminal": {
    "font_fallbacks": ["ZedMono Nerd Font Mono"]
  }
}
