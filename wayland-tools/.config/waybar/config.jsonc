// -*- mode: jsonc -*-
{
  "layer": "top",
  "position": "top",
  "spacing": 4, // Gaps between modules (4px)

  "modules-left": [
    "hyprland/workspaces",
    "hyprland/window"
  ],

  "modules-center": [
    "group/environment"
  ],

  "modules-right": [
    "tray",
    "group/resources",
    "custom/cava_mviz",
    "custom/exit"
  ],

  "group/environment": {
    "orientation": "inherit",
    "modules": [
      "clock",
      "custom/weather"
    ]
  },

  "group/resources": {
    "orientation": "inherit",
    "modules": [
      "idle_inhibitor",
      "battery",
      "cpu",
      "memory",
      "pulseaudio"
    ]
  },

  // Modules configuration
  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "active": "ÔÑë",
      "visible": "ÔÑë",
      "default": "ÔÑë",
      "urgent": "ÔÅ™",
      "empty": "ÔÑå",
      "focused": "ÔÜí",
    }
  },

  "hyprland/window": {
    "separate-outputs": true,
    "icon": true,
    "icon-size": 12,
    "format": "{}"
  },

  // "sway/workspaces": {
  //     "disable-scroll": true,
  //     "all-outputs": true,
